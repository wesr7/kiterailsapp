<h1>Add your Kite!</h1>

<%= form_for :kite, url: kites_path do |f| %>

<p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :origin %><br>
    <%= f.text_field :origin %>
</p>

<p>
    <%= f.label :color %><br>
    <%= f.text_field :color %>
</p>

<p>
    <%= f.label :style %><br>
    <%= f.text_field :style %>
</p>

<p>
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
</p>

<p>
    <%= f.label :additional_information %><br>
    <%= f.text_area :additional_information %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>